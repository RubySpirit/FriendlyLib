<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet author="RubySpirit" id="2021-10-16-1">

        <createTable tableName="addresses">
            <column name="id" type="uuid" defaultValue="gen_random_uuid()">
                <constraints primaryKey="true"/>
            </column>
            <column name="city" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="zip_code" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="state" type="VARCHAR(30)"/>
            <column name="street" type="VARCHAR(30)"/>
            <column name="phone" type="VARCHAR(30)"/>
            <column name="email_address" type="VARCHAR(30)" defaultValue="NOW()"/>
            <column name="last_updated" type="datetime" defaultValue="NOW()"/>
        </createTable>

        <createTable tableName="users">
            <column name="id" type="uuid" defaultValue="gen_random_uuid()">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(255)"/>
            <column name="created_at" type="datetime" defaultValue="NOW()"/>
            <column name="last_logon" type="datetime"/>
            <column name="address_id" type="uuid">
                <constraints foreignKeyName="user_address_id" referencedTableName="addresses" referencedColumnNames="id"/>
            </column>
            <column name="role" type="VARCHAR(25)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="titles">
            <column name="id" type="uuid" defaultValue="gen_random_uuid()">
                <constraints primaryKey="true"/>
            </column>
            <column name="author" type="VARCHAR(55)"/>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="title_reviews">
            <column name="id" type="uuid" defaultValue="gen_random_uuid()">
                <constraints primaryKey="true"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="rating" type="decimal(1)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="datetime" defaultValue="NOW">
                <constraints nullable="false"/>
            </column>
            <column name="title_id" type="UUID">
                <constraints foreignKeyName="title_FK" referencedTableName="titles" referencedColumnNames="id"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints foreignKeyName="user_review_FK" referencedTableName="users" referencedColumnNames="id"/>
            </column>
        </createTable>

        <createTable tableName="facilities">
            <column name="id" type="uuid" defaultValue="gen_random_uuid()">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(50)"/>
            <column name="working_hours" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="address_id" type="uuid">
                <constraints foreignKeyName="facility_address_id" referencedTableName="addresses" referencedColumnNames="id"/>
            </column>
        </createTable>

        <createTable tableName="books">
            <column name="id" type="uuid" defaultValue="gen_random_uuid()">
                <constraints primaryKey="true"/>
            </column>
            <column name="title_id" type="uuid">
                <constraints foreignKeyName="book_title_FK" referencedTableName="titles" referencedColumnNames="id"/>
            </column>
            <column name="added_at" type="datetime" defaultValue="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="book_status" type="VARCHAR(20)"/>
            <column name="facility_id" type="UUID">
                <constraints foreignKeyName="book_facility_FK" referencedTableName="facilities" referencedColumnNames="id"/>
            </column>
        </createTable>

        <createTable tableName="categories">
            <column name="id" type="uuid" defaultValue="gen_random_uuid()">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="book_category_association">
            <column name="book_id" type="uuid">
                <constraints nullable="false" foreignKeyName="book_category_FK" referencedTableName="books" referencedColumnNames="id"/>
            </column>
            <column name="category_id" type="uuid">
                <constraints nullable="false"  foreignKeyName="category_book_FK" referencedTableName="categories" referencedColumnNames="id"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="book_id, category_id"
                       constraintName="PK_CATEGORY_BOOK"
                       tableName="book_category_association"
                       validate="true"/>

        <createTable tableName="rental_cards">
            <column name="id" type="uuid" defaultValue="gen_random_uuid()">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_reader_id" type="uuid">
                <constraints foreignKeyName="user_rental_card_FK" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="book_id" type="uuid">
                <constraints foreignKeyName="book_rental_card_FK" referencedTableName="books" referencedColumnNames="id"/>
            </column>
            <column name="rental_date" type="datetime" defaultValue="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="penalty_number" type="smallint" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="renewal_number" type="smallint" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="can_renew" type="boolean" defaultValue="true"/>
            <column name="estimated_return" type="datetime"/>
            <column name="status" type="VARCHAR(25)"/>
            <column name="return_time" type="datetime"/>
        </createTable>



        <createTable tableName="rental_settings">
            <column name="id" type="uuid" defaultValue="gen_random_uuid()">
                <constraints primaryKey="true"/>
            </column>
            <column name="max_rental_days" type="tinyint"/>
            <column name="delay_penalty" type="decimal(2)">
                <constraints nullable="false"/>
            </column>
            <column name="max_rental_renewals" type="tinyint"/>
        </createTable>

    </changeSet>
</databaseChangeLog>
